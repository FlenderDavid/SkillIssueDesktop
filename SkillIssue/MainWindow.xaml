<Window x:Class="SkillIssue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="400">
    <Grid>
        <Label Content="Login"
               FontSize="24"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"
               VerticalAlignment="Top"/>

        <TextBox Name="emailTextBox"
                 HorizontalAlignment="Center"
                 Margin="0,99,0,210"
                 Width="200"
                 Height="25"/>

        <PasswordBox Name="passwordBox"
                     HorizontalAlignment="Center"
                     Margin="0,172,0,137"
                     Width="200"
                     Height="25"/>

        <Button Content="Bejelentkezés"
                HorizontalAlignment="Center"
                Margin="0,190,0,0"
                Width="200"
                Height="30"
                Click="LoginButton_Click"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="100,68,0,0" VerticalAlignment="Top"/>
        <Label Content="Jelszó" HorizontalAlignment="Left" Margin="100,141,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
